<p class="img__name"></p>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		// splash__sectionにloadクラスを追加
		setTimeout(() => {
			const splashSection = document.querySelector('.splash__section');
			if (splashSection) {
				splashSection.classList.add('load');
			}
		}, 2000);
	});
</script>


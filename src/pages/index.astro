import ThreeScene from '../components/ThreeScene.astro';
import MusicPlayer from '../components/MusicPlayer.astro';
import AudioVisualizer from '../components/AudioVisualizer.astro';
---

<!DOCTYPE html>
<html lang="jp">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="robots" content="index, follow" />

		<!-- ページタイトル -->
		<title>UNI OFFICIAL SITE</title>
		<meta
			name="description"
			content='FUN IS COOL SELECT STORE OPEN FOR 25SS COMING SOON…'
		/>
		<meta property="og:title" content="UNI OFFICIAL SITE" />
